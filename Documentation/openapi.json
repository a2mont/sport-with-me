{
  "openapi": "3.0.3",
  "info": {
    "title": "Sport with me",
    "description": "Manages users and activities",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "http//localhost:8080"
    }
  ],
  "tags": [
    {
      "name": "users"
    },
    {
      "name": "activities"
    }
  ],
  "paths": {
    "/users/": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Gets a list of users",
        "responses": {
          "200": {
            "description": "The list of all users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Creates a new user",
        "requestBody": {
          "description": "The user to create",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The created user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "users"
        ],
        "summary": "Deletes all users",
        "responses": {
          "204": {
            "description": "No content"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Gets one user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the user",
            "required": true,
            "schema": {
              "type": "string",
              "example": "42"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested user",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/User"
                    },
                    {
                      "type": "object"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "users"
        ],
        "summary": "Deletes one user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the user",
            "required": true,
            "schema": {
              "type": "string",
              "example": "42"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No description"
          }
        }
      },
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "Updates an existing user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the user",
            "required": true,
            "schema": {
              "type": "string",
              "example": "42"
            }
          }
        ],
        "requestBody": {
          "description": "The user to update",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The updated user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/activities/": {
      "get": {
        "tags": [
          "activities"
        ],
        "summary": "get a list of activities",
        "responses": {
          "200": {
            "description": "list of all activities",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Activity"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "activities"
        ],
        "summary": "Creates a new activity",
        "requestBody": {
          "description": "The activity to create",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Activity"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The created activity",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Activity"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "activities"
        ],
        "summary": "Deletes all activities",
        "responses": {
          "204": {
            "description": "No content"
          }
        }
      }
    },
    "/activities/{id}": {
      "get": {
        "tags": [
          "activities"
        ],
        "summary": "Gets one activity",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the activity",
            "required": true,
            "schema": {
              "type": "string",
              "example": "42"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested activity",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Activity"
                    },
                    {
                      "type": "object"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "activities"
        ],
        "summary": "Deletes one activity",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the activity",
            "required": true,
            "schema": {
              "type": "string",
              "example": "42"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No description"
          }
        }
      },
      "patch": {
        "tags": [
          "activities"
        ],
        "summary": "Updates an existing activity",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the activity",
            "required": true,
            "schema": {
              "type": "string",
              "example": "42"
            }
          }
        ],
        "requestBody": {
          "description": "The activity to update",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Activity"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The updated activity",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Activity"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "description": "Object representing an user",
        "type": "object",
        "properties": {
          "id": {
            "description": "id of the user",
            "type": "string",
            "example": "42"
          },
          "firstname": {
            "description": "first name of the user",
            "type": "string",
            "example": "John"
          },
          "lastname": {
            "description": "last name of the user",
            "type": "string",
            "example": "Doe"
          }
        }
      },
      "Activity": {
        "description": "Object representing an activity",
        "type": "object",
        "properties": {
          "id": {
            "description": "id of the activity",
            "type": "string",
            "example": "42"
          },
          "sport": {
            "description": "sport of the activity",
            "type": "string",
            "example": "Basketball"
          },
          "participants": {
            "description": "number of participants",
            "type": "integer",
            "example": 5
          }
        }
      }
    }
  }
}